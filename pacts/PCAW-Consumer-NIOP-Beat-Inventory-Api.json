{
  "consumer": {
    "name": "PCAW-Consumer"
  },
  "interactions": [
    {
      "description": "a request from PCAW to update device part number during patient care workflow",
      "pending": false,
      "providerStates": [
        {
          "name": "a device with serial number SN-PCAW-2024-100 exists in inventory"
        }
      ],
      "request": {
        "body": {
          "content": {
            "Org": "philips",
            "SerialNumber": "SN-PCAW-2024-100",
            "Username": "pcaw.workflow.engine"
          },
          "contentType": "application/json",
          "encoded": false
        },
        "headers": {
          "Content-Type": [
            "application/json"
          ]
        },
        "method": "POST",
        "path": "/api/UpdateDeviceInformation"
      },
      "response": {
        "body": {
          "content": {
            "CorrelationId": "test-correlation-id-001",
            "Message": "Device information updated successfully.",
            "Success": true
          },
          "contentType": "application/json",
          "encoded": false
        },
        "headers": {
          "Content-Type": [
            "application/json; charset=utf-8"
          ]
        },
        "matchingRules": {
          "body": {
            "$.CorrelationId": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "type"
                }
              ]
            }
          }
        },
        "status": 200
      },
      "type": "Synchronous/HTTP"
    },
    {
      "description": "a request from PCAW with missing serial number",
      "pending": false,
      "providerStates": [
        {
          "name": "an update request with empty serial number"
        }
      ],
      "request": {
        "body": {
          "content": {
            "Org": "philips",
            "SerialNumber": "",
            "Username": "pcaw.workflow.engine"
          },
          "contentType": "application/json",
          "encoded": false
        },
        "headers": {
          "Content-Type": [
            "application/json"
          ]
        },
        "method": "POST",
        "path": "/api/UpdateDeviceInformation"
      },
      "response": {
        "body": {
          "content": {
            "Message": "Serial number is required.",
            "Success": false
          },
          "contentType": "application/json",
          "encoded": false
        },
        "headers": {
          "Content-Type": [
            "application/json; charset=utf-8"
          ]
        },
        "status": 400
      },
      "type": "Synchronous/HTTP"
    }
  ],
  "metadata": {
    "pactRust": {
